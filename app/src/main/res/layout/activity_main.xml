<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_clear"
        android:background="@color/light_blue"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="3dp"
        android:padding="10dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_clear"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        android:backgroundTint="@color/nude"
        android:text="CLR"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_result"
        app:layout_constraintStart_toStartOf="@id/text_result"
        android:layout_margin="4dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_percentage"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toEndOf="@id/btn_clear"
        app:layout_constraintTop_toBottomOf="@id/text_result"
        android:backgroundTint="@color/nude"
        android:text="%"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="4dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_power"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toEndOf="@id/btn_percentage"
        app:layout_constraintTop_toBottomOf="@id/text_result"
        android:backgroundTint="@color/nude"
        android:text="^"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="4dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_division"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintStart_toEndOf="@id/btn_power"
        app:layout_constraintTop_toBottomOf="@id/text_result"
        android:backgroundTint="@color/nude"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="4dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn7"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn_clear"
        app:layout_constraintStart_toStartOf="@id/btn_clear"
        android:backgroundTint="@color/cashmear"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn8"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn_percentage"
        app:layout_constraintStart_toStartOf="@id/btn_percentage"
        android:backgroundTint="@color/cashmear"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn9"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn_power"
        app:layout_constraintStart_toStartOf="@id/btn_power"
        android:backgroundTint="@color/cashmear"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="0dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_multiply"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn_division"
        app:layout_constraintStart_toStartOf="@id/btn_division"
        android:backgroundTint="@color/nude"
        android:text="*"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn4"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintStart_toStartOf="@id/btn7"
        android:backgroundTint="@color/cashmear"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn5"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        app:layout_constraintStart_toStartOf="@id/btn8"
        android:backgroundTint="@color/cashmear"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn6"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        app:layout_constraintStart_toStartOf="@id/btn9"
        android:backgroundTint="@color/cashmear"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_minus"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn_multiply"
        app:layout_constraintStart_toStartOf="@id/btn_multiply"
        android:backgroundTint="@color/nude"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn1"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintStart_toStartOf="@id/btn4"
        android:backgroundTint="@color/cashmear"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn2"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintStart_toStartOf="@id/btn5"
        android:backgroundTint="@color/cashmear"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn3"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_constraintStart_toStartOf="@id/btn6"
        android:backgroundTint="@color/cashmear"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_plus"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn_minus"
        app:layout_constraintStart_toStartOf="@id/btn_minus"
        android:backgroundTint="@color/nude"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn0"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.48"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintStart_toStartOf="@id/btn1"
        app:layout_constraintEnd_toEndOf="@id/btn2"
        android:backgroundTint="@color/cashmear"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_dot"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_constraintStart_toStartOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@id/btn0"
        android:backgroundTint="@color/cashmear"
        android:text="."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_equal"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.23"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintStart_toStartOf="@id/btn_plus"
        app:layout_constraintStart_toEndOf="@id/btn_dot"
        android:backgroundTint="@color/nude"
        android:text="="
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>